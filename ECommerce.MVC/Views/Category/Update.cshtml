@model Category
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-top:50px;height:500px;width:500px;">
    <div class="mt-2">
        <form class="border border- p-2 border-opacity-25" method="post">
            <header>
                <h2>Kategori Güncelleme</h2>
            </header>
            <body>

                <div class="mb-3">
                    <input type="hidden" class="form-control"  asp-for="Id" style="background-color:#EDF1D6">
                </div>
                <div class="mb-3">
                    <label class="form-label">Category Name</label>
                    <input type="text" class="form-control"  asp-for="CategoryName" style="background-color:#EDF1D6">
                </div>
                <div class="mb-3">
                    <label class="form-label">Description</label>
                    <input type="text" class="form-control"  asp-for="Description" style="background-color:#EDF1D6">
                </div>

                <div class="d-flex">

                    <button type="submit" class="btn btn-warning">Güncelle</button>
                </div>


            </body>

        </form>
    </div>
</div>